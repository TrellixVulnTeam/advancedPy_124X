<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: .8
        Button:
            id: camera_button
            text: "Start Camera"
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: .1
        Button:
            text: "Capture"
            on_press: root.capture()
            size_hint_y: .1


<ImageScreen>:
    GridLayout:
        padding: 10
        spacing: 10
        cols: 1
        Image:
            id: img
            size_hint_y: .7
        Button:
            text: "Create sharable link"
            on_press: root.create_link()
            size_hint_y: .1
        Label:
            id: link
            text: ""
            size_hint_y: .1
        GridLayout:
            cols: 2
            size_hint_y: .1
            Button:
                text: "Copy link"
                on_press: root.copy_link()
            Button:
                text: "Open link"
                on_press: root.open_link()

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: "camera_screen"
    ImageScreen:
        id: image_screen
        name: "image_screen"
